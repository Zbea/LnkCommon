<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_black_stroke_5dp_corner"
    android:orientation="vertical"
    android:padding="@dimen/dp_20">

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginTop="3dp"
        android:text="通知"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_25"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tv_status"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_25" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_25" />

        <TextView
            android:id="@+id/tv_commitDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:textColor="@color/black_20"
            android:textSize="@dimen/sp_22" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/icon_setting_delete"
            android:background="@drawable/click_btn_transparent_line_black"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@+id/ll_title"
        android:layout_alignStart="@id/ll_title"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_gravity="right"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black_20"
            android:textSize="@dimen/sp_22" />

        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_20"
            android:gravity="center"
            android:text="成绩排行"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_22"
            android:background="@drawable/click_btn_line_black_5dp"
            />

        <TextView
            android:id="@+id/tv_answer"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_20"
            android:gravity="center"
            android:text="作业答案"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_22"
            android:background="@drawable/click_btn_line_black_5dp"
            />

    </LinearLayout>




</RelativeLayout>