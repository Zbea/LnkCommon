<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    >

    <include
        layout="@layout/common_fragment_title"
        />

    <RelativeLayout
        android:layout_width="740dp"
        android:layout_height="1030dp"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@mipmap/icon_date_bg"
        android:layout_gravity="center_horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="13dp"
        android:paddingEnd="13dp"
        >
        <LinearLayout
            android:id="@+id/ll_date"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/tv_date_festival"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_22"
                android:textColor="@color/black_30"
                android:layout_marginTop="@dimen/dp_30"
                android:gravity="center"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_date_month"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textSize="36sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/tv_date_day"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textSize="36sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/tv_date_week"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:textSize="36sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_date_luna"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_22"
                android:textColor="@color/black_30"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_30"
                />

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_date"
            android:scaleType="fitCenter"
            android:src="@mipmap/icon_date_event_bg" />
        <ImageView
            android:id="@+id/iv_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_date"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/iv_calender"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_date"
            android:layout_marginTop="@dimen/dp_10"
            android:scaleType="fitCenter"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/v_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@mipmap/icon_main_up"
            />

        <ImageView
            android:id="@+id/v_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/icon_main_down"
            />

        <ImageView
            android:id="@+id/iv_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/dp_10"
            android:src="@mipmap/icon_main_change"
            android:padding="@dimen/dp_5"
            android:background="@drawable/click_btn_transparent_line_black"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="52dp"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        >

        <LinearLayout
            android:id="@+id/ll_freenote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/click_btn_transparent_line_black"
            >
            <ImageView
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:src="@mipmap/icon_freenote"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_25"
                android:layout_marginTop="@dimen/dp_10"
                android:text="随笔"
                android:textColor="@color/black"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_diary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/click_btn_transparent_line_black"
            >
            <ImageView
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:src="@mipmap/icon_diary"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_25"
                android:layout_marginTop="@dimen/dp_10"
                android:text="日记本"
                android:textColor="@color/black"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_plan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/click_btn_transparent_line_black"
            >
            <ImageView
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:src="@mipmap/icon_plan"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_25"
                android:layout_marginTop="@dimen/dp_10"
                android:text="月周计划"
                android:textColor="@color/black"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_screenshot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/click_btn_transparent_line_black"
            >
            <ImageView
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:src="@mipmap/icon_main_screenshot"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_25"
                android:layout_marginTop="@dimen/dp_10"
                android:text="截图列表"
                android:textColor="@color/black"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/click_btn_transparent_line_black"
            >
            <RelativeLayout
                android:layout_width="98dp"
                android:layout_height="98dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/icon_main_message"
                    />

                <ImageView
                    android:id="@+id/iv_message_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:src="@drawable/bg_cricle_black" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_25"
                android:layout_marginTop="@dimen/dp_10"
                android:text="消息"
                android:textColor="@color/black"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>