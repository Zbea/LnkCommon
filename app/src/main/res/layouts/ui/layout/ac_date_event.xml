<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:padding="@dimen/dp_20"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_30"
            android:src="@mipmap/icon_back"
            android:scaleType="center"
            android:background="@drawable/click_btn_transparent_line_black"
            />

        <ImageView
            android:id="@+id/iv_erasure"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_40"
            android:scaleType="center"
            android:src="@mipmap/icon_draw_erasure" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <include
            layout="@layout/common_date_arrow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginEnd="@dimen/dp_15"
            />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="714dp"
        android:layout_height="840dp">
        <com.android.internal.widget.PreferenceImageView
            android:id="@+id/v_content"
            android:layout_width="714dp"
            android:layout_height="840dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/icon_date_event_bg"
            />
    </RelativeLayout>



</LinearLayout>