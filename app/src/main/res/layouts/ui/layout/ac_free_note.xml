<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_height"
        android:gravity="center_vertical"
        android:background="@color/bg_page">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:scaleType="center"
            android:src="@mipmap/icon_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:textSize="31sp"
            android:text="随笔"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/iv_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="70dp"
            android:src="@mipmap/icon_freenote_recorder"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="105dp"
            android:layout_marginEnd="@dimen/dp_30"
            android:text="格式"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_30"
            android:text="插入"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="70dp"
            android:text="分享"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/tv_share_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="30dp"
            android:drawableStart="@mipmap/icon_freenote_share_list"
            android:drawablePadding="@dimen/dp_5"
            android:text="列表"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:gravity="center"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            />

        <TextView
            android:id="@+id/tv_record_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="30dp"
            android:drawableStart="@mipmap/icon_freenote_recorder_list"
            android:drawablePadding="@dimen/dp_5"
            android:text="列表"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:gravity="center"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            />
        <TextView
            android:id="@+id/tv_free_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="70dp"
            android:drawableStart="@mipmap/icon_freenote_note_list"
            android:drawablePadding="@dimen/dp_5"
            android:text="列表"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:gravity="center"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.android.internal.widget.PreferenceImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_freenote_bg_1" />

        <include
            android:id="@+id/ll_geometry"
            layout="@layout/common_drawing_geometry"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/iv_geometry"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/dp_10"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:padding="1dp"
            android:src="@mipmap/icon_app_geometry"
            android:background="@drawable/bg_black_stroke_0dp_corner"
            />
    </RelativeLayout>

    <include layout="@layout/common_drawing_bottom" />

</LinearLayout>