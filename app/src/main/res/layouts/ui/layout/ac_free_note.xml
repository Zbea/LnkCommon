<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    >

    <include
        layout="@layout/common_title"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/bg_page">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_marginStart="110dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="22sp"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="30dp"
            android:textColor="@color/black"
            android:textSize="31sp"
            />

        <TextView
            android:id="@+id/tv_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_marginEnd="@dimen/dp_30"
            android:text="主题"
            />

        <TextView
            android:id="@+id/tv_insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_marginEnd="@dimen/dp_30"
            android:text="插入"
            />

        <TextView
            android:id="@+id/tv_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_marginEnd="@dimen/dp_30"
            android:text="录音"
            />

        <TextView
            android:id="@+id/tv_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_marginEnd="@dimen/dp_30"
            android:text="列表"
            />


        <ImageView
            android:id="@+id/iv_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_40"
            android:visibility="gone"
            android:src="@mipmap/icon_manager"/>

    </LinearLayout>


    <com.android.internal.widget.PreferenceImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@mipmap/icon_note_details_bg_1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawing_bottom_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/iv_erasure"
                android:layout_width="@dimen/drawing_bottom_height"
                android:layout_height="match_parent"
                android:layout_marginStart="98dp"
                android:scaleType="center"
                android:src="@mipmap/icon_draw_erasure" />

            <ImageView
                android:id="@+id/iv_page_up"
                android:layout_width="@dimen/drawing_bottom_height"
                android:layout_height="match_parent"
                android:layout_marginStart="44dp"
                android:scaleType="center"
                android:src="@mipmap/icon_draw_page_up" />

            <View
                android:id="@+id/iv_catalog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            />


        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <View
                android:id="@+id/iv_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

            <ImageView
                android:id="@+id/iv_page_down"
                android:layout_width="@dimen/drawing_bottom_height"
                android:layout_height="match_parent"
                android:layout_marginEnd="196dp"
                android:scaleType="center"
                android:src="@mipmap/icon_draw_page_down" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>